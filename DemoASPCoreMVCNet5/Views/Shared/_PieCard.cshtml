
@model Pie

    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" class="card-img-top" alt="@Model.Name">
        <div class="caption">
            <h3>@Model.Name</h3>
            <p>@Model.ShortDescription</p>
             <p>
                        <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pieId="@Model.PieId" class="btn btn-primary" role="button">Add To Cart</a>
                        <a asp-controller="Pie" asp-action="Details" asp-route-id="@Model.PieId" class="btn btn-info" role="button">Details</a>    
                    </p>
        </div>
    </div>



